{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "Kong/public-shared-renovate:backend",
    "Kong/public-shared-renovate:makefile",
    "kumahq/kuma//.renovate/mise",
    "kumahq/kuma//.renovate/security"
  ],
  "baseBranchPatterns": [
    "main"
  ],
  "kubernetes": {
    "managerFilePatterns": [
      "/^kustomize\\/.+\\.ya?ml$/"
    ],
    "ignorePaths": [
      "/\\/kustomization.ya?ml$/"
    ]
  }
}
